{"pkgconfig.json": [
    {
        "match": "\\$\\{[\\w_]*\\}",
        "id": "var-value",
        "style-ref": "variable"
    },
    {
        "include": {"context": [
            {"ref": "def:shell-like-comment"},
            {
                "include": {"context": [
                    {
                        "where": "start",
                        "sub-pattern": 1,
                        "style-ref": "variable"
                    },
                    {"ref": "var-value"}
                ]},
                "start": "^([\\w_]+)\\s*=\\s*",
                "end-at-line-end": true
            },
            {
                "include": {"context": [
                    {
                        "where": "start",
                        "sub-pattern": 1,
                        "style-ref": "info"
                    },
                    {"ref": "var-value"}
                ]},
                "start": "^([\\w_\\.]+)\\s*\\:\\s*",
                "end-at-line-end": true
            }
        ]},
        "id": "pkgconfig"
    }
]}
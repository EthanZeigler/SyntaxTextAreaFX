{"bluespec.json": [
    {
        "prefix": "\\$",
        "id": "system-task",
        "keyword": [
            "display",
            "dumpoff",
            "dumpon",
            "dumpvars",
            "fclose",
            "fdisplay",
            "fflush",
            "fgetc",
            "finish",
            "fopen",
            "fwrite",
            "stime",
            "stop",
            "test\\$plusargs",
            "time",
            "ungetc",
            "write"
        ],
        "style-ref": "system-task"
    },
    {
        "include": {"context": [
            {
                "where": "start",
                "sub-pattern": 1,
                "style-ref": "attribute"
            },
            {"ref": "verilog:string"}
        ]},
        "start": "\\(\\*\\s*(\\%{attributes-names})",
        "end": "\\*\\)",
        "id": "annotation",
        "style-ref": "annotation"
    },
    {
        "id": "import-bvi",
        "keyword": [
            "ancestor",
            "clocked_by",
            "default_clock",
            "default_reset",
            "enable",
            "input_clock",
            "input_reset",
            "method",
            "no_reset",
            "output_clock",
            "output_reset",
            "parameter",
            "path",
            "port",
            "ready",
            "reset_by",
            "same_family",
            "schedule"
        ],
        "style-ref": "import-bvi"
    },
    {
        "id": "keyword",
        "keyword": [
            "action",
            "clocked_by",
            "deriving",
            "endaction",
            "endfunction",
            "endinterface",
            "endmethod",
            "endmodule",
            "endpackage",
            "endrule",
            "endrules",
            "enum",
            "function",
            "if",
            "import",
            "interface",
            "let",
            "match",
            "method",
            "module",
            "numeric",
            "package",
            "provisos",
            "reset_by",
            "rule",
            "rules",
            "struct",
            "tagged",
            "type",
            "typedef",
            "union"
        ],
        "style-ref": "keyword"
    },
    {
        "id": "type",
        "keyword": [
            "Action",
            "ActionValue",
            "Bit",
            "Bool",
            "int",
            "Int",
            "Integer",
            "Maybe",
            "Nat",
            "Rules",
            "String",
            "Tuple[2-7]",
            "UInt"
        ],
        "style-ref": "type"
    },
    {
        "id": "standard-interface",
        "keyword": [
            "Client",
            "ClientServer",
            "Connectable",
            "FIFO",
            "FIFOF",
            "Get",
            "GetPut",
            "PulseWire",
            "Put",
            "Reg",
            "Server",
            "Wire"
        ],
        "style-ref": "type"
    },
    {
        "include": {"context": [
            {"ref": "system-task"},
            {"ref": "annotation"},
            {"ref": "import-bvi"},
            {"ref": "keyword"},
            {"ref": "type"},
            {"ref": "standard-interface"},
            {"ref": "verilog:verilog"}
        ]},
        "id": "bluespec",
        "class": "no-spell-check"
    }
]}
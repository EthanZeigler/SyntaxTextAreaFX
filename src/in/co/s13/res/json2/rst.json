{"rst.json": [
    {
        "match": "^\\s*\\.\\. .*::.*$",
        "id": "directive",
        "class": "no-spell-check",
        "style-ref": "directive"
    },
    {
        "match": "^\\s*\\.\\. \\[.+\\] .*$",
        "id": "footnotes",
        "style-ref": "directive"
    },
    {
        "match": "^\\s*\\.\\. _.*:.*$",
        "id": "link-target",
        "class": "no-spell-check",
        "style-ref": "directive"
    },
    {
        "start": "(\\s*)\\.\\.(\\s+).+$",
        "end": "^(?!(\\%{1@start}  \\%{2@start})|(^$))",
        "id": "comment",
        "style-ref": "comment"
    },
    {
        "include": {"context": {
            "end-parent": true,
            "start": "(\\s*).+$",
            "end": "^(?!(\\%{1@start}))",
            "id": "comment-single-block",
            "style-ref": "comment"
        }},
        "start": "^(\\s*)\\.\\.(\\s*)$",
        "end": "x",
        "id": "comment-single",
        "style-ref": "comment"
    },
    {
        "match": "^\\s*(=+|\\-+|`+|:+|(\\.\\.\\.+)|'+|\"+|~+|\\^+|_+|\\*+|\\++|#+)\\s*$",
        "id": "title-adornment",
        "style-ref": "header"
    },
    {
        "match": "^\\s*[\\*\\+\\-\u2022\u2023\u2043]",
        "id": "bullet",
        "style-ref": "bullet"
    },
    {
        "match": "^\\s*((\\%{enumerator-chars}\\.)|(\\(?\\%{enumerator-chars}\\)) )",
        "id": "enumerator",
        "style-ref": "bullet"
    },
    {
        "match": "^\\s*:.+?:",
        "id": "field",
        "style-ref": "bullet"
    },
    {
        "match": "\\*\\*(?!\\s).+?(?!\\s)\\*\\*",
        "id": "strong-emphasis",
        "style-ref": "strong-emphasis"
    },
    {
        "match": "\\*(?!\\s).+?(?!\\s)\\*",
        "id": "emphasis",
        "style-ref": "emphasis"
    },
    {
        "match": "(\\S+_)|(`\\b.*?\\b`_)",
        "id": "link",
        "style-ref": "link"
    },
    {
        "match": "\\|\\b.*\\b\\|",
        "id": "substitution",
        "style-ref": "substitution"
    },
    {
        "include": {"context": {
            "match": "``(?!\\s).*(?!\\s)``",
            "id": "inline-literals",
            "class": "no-spell-check",
            "style-ref": "code"
        }},
        "id": "literals"
    },
    {
        "match": "((http)|(file))://\\S*",
        "id": "url",
        "style-ref": "url"
    },
    {
        "include": {"context": [
            {"ref": "directive"},
            {"ref": "link-target"},
            {"ref": "footnotes"},
            {"ref": "comment"},
            {"ref": "comment-single"},
            {"ref": "title-adornment"},
            {"ref": "bullet"},
            {"ref": "enumerator"},
            {"ref": "field"},
            {"ref": "strong-emphasis"},
            {"ref": "emphasis"},
            {"ref": "link"},
            {"ref": "substitution"},
            {"ref": "literals"},
            {"ref": "url"}
        ]},
        "id": "rst"
    }
]}